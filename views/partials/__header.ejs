<!-- Creating a pattern for our header -->
<!-- We can use it anywhere in our code -->

<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
      <div>
        <!-- (user_id) from JS file -->
        <% if(user){ %>
          <form method="POST" action="/logout"> Logged in As: <%= user.email %> <button type="submit" class="btn btn-outline-dark" style="width: 150px">Logout</button> </form>
        <% } else{ %>   
      <form method="GET" action="/login">    <button type="submit" class="btn btn-outline-dark" style="width: 80px;">Login</button> </form>
      <form method="GET" action="/register"> <button type="submit" class="btn btn-outline-warning" style="width: 80px">Register</button></form>
        <% } %>          
    </div>
    </nav>
  </header>